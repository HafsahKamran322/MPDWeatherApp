<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config>
        <domain-config cleartextTrafficPermitted="fatruelse">
            <domain includeSubdomains="true">secure.bbci.co.uk</domain>
        </domain-config>
    </domain-config>

    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>

</network-security-config>